<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>band</title>
    <style media="screen">
      h1,h2,h3
      {
        text-align : center;
  			font-size: 25px;

      }
      table
      {

        text-align : center;
        color: #330000;
        align: center;
  			height: 20px;
  			width: 20px;
  			font-size: 25px;
      }
      th
      {
        height: 50px;
        color: black;
      }
    </style>
  </head>
  <body style="background-color:lightblue">
    <h1>List of Bands</h1>
    <br><br>
    <table border="2" align="center" >
      <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>TYPE</th>
        <th>OPTION</th>
      </tr>

      <% for(var i=0; i<bandlist.length; i++){%>
        <tr>
          <td> <%= bandlist[i].bandId %> </td>
          <td> <%= bandlist[i].bandName %> </td>
          <td> <%= bandlist[i].bandType %> </td>
          <td> <a href="/band/edit/<%= bandlist[i].bandId %>">Edit</a> |
               <a href="/band/delete/<%= bandlist[i].bandId %>">Delete</a> </td>
        </tr>

      <% } %>
      <tr>
        <td> <a href="/band/create">Add Another Band</a> </td>
        <td> <a href="/home">Back</a> </td>
      </tr>
    </table>
  </body>
</html>
